
@model mission6.Models.MovieForm
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Fill out movie info:</h2>

<br>
<br>

<form method="post" asp-action="@(Model.MovieId == 0 ? "MovieStuff" : "Edit")">
    <!-- Hidden input to ensure MovieId is sent during POST -->
    <input type="hidden" asp-for="MovieId" />
    <label asp-for="CategoryId">Category</label>
    <select asp-for="CategoryId" class="form-control">
        <option value="">Select a Category</option>
        @foreach (Category category in ViewBag.Categories)
        {
            <option value="@category.CategoryId">@category.CategoryName</option>
        }
    </select>
    <br>

    <label asp-for="Title">Title</label>
    <input type="text" asp-for="Title" class="form-control" required>
    <br>

    <label asp-for="Year">Year</label>
    <input type="number" asp-for="Year" class="form-control" min="1888" required>
    <br>

    <label asp-for="Director">Director</label>
    <input type="text" asp-for="Director" class="form-control" required>
    <br>

    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating" class="form-control" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="NR">NR</option>
    </select>
    <br>

    <label asp-for="LentTo">Lent To</label>
    <input type="text" asp-for="LentTo" class="form-control">
    <br>

    <label asp-for="Edited">Edited?</label>
    <select asp-for="Edited" class="form-control" required>
        <option value="True">Yes</option>
        <option value="False">No</option>
    </select>
    <br>

    <label asp-for="CopiedToPlex">Copied to Plex?</label>
    <select asp-for="CopiedToPlex" class="form-control" required>
        <option value="True">Yes</option>
        <option value="False">No</option>
    </select>
    <br>

    <label asp-for="Notes">Notes:</label>
    <br>
    <textarea asp-for="Notes" cols="30" rows="10" class="form-control"></textarea>
    <br>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
